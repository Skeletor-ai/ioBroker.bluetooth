{
  "i18n": true,
  "type": "tabs",
  "items": {
    "tabDevices": {
      "type": "panel",
      "label": "tabDevices",
      "items": {
        "_headerDiscover": {
          "type": "header",
          "text": "discoverHeader",
          "size": 4,
          "sm": 12,
          "newLine": true,
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "_infoDiscover": {
          "type": "staticText",
          "text": "discoverInfo",
          "sm": 12,
          "style": {
            "marginBottom": 12
          },
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "_deviceSelect": {
          "type": "selectSendTo",
          "command": "getDiscoveredDevices",
          "label": "selectDevice",
          "sm": 8,
          "newLine": true,
          "noTranslation": true,
          "alsoDependsOn": [
            "allowlist"
          ],
          "xs": 12,
          "md": 8,
          "lg": 8,
          "xl": 8
        },
        "_addSelected": {
          "type": "sendTo",
          "command": "addToAllowlist",
          "jsonData": "{\"mac\": \"${data._deviceSelect}\"}",
          "label": "addDevice",
          "icon": "add",
          "variant": "contained",
          "useNative": true,
          "showProcess": true,
          "sm": 4,
          "newLine": false,
          "xs": 12,
          "md": 4,
          "lg": 4,
          "xl": 4
        },
        "_divider1": {
          "type": "divider",
          "sm": 12,
          "style": {
            "marginTop": 16,
            "marginBottom": 16
          },
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "_headerAllowlist": {
          "type": "header",
          "text": "allowlistHeader",
          "size": 4,
          "sm": 12,
          "newLine": true,
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "_infoAllowlist": {
          "type": "staticText",
          "text": "allowlistInfo",
          "sm": 12,
          "style": {
            "marginBottom": 8
          },
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "allowlist": {
          "type": "table",
          "label": "",
          "sm": 12,
          "items": [
            {
              "attr": "mac",
              "type": "text",
              "title": "macAddress",
              "width": "30%",
              "filter": false,
              "sort": true
            },
            {
              "attr": "name",
              "type": "text",
              "title": "deviceName",
              "width": "30%",
              "filter": false,
              "sort": false
            },
            {
              "attr": "type",
              "type": "select",
              "title": "deviceType",
              "width": "15%",
              "options": [
                {
                  "label": "typeAuto",
                  "value": "auto"
                },
                {
                  "label": "typeClassic",
                  "value": "classic"
                },
                {
                  "label": "typeBLE",
                  "value": "ble"
                }
              ],
              "default": "auto",
              "filter": false,
              "sort": false
            },
            {
              "attr": "autoConnect",
              "type": "checkbox",
              "title": "autoConnectCol",
              "width": "12%",
              "default": true,
              "filter": false,
              "sort": false
            }
          ],
          "default": [],
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        }
      }
    },
    "tabScan": {
      "type": "panel",
      "label": "tabScan",
      "items": {
        "hciDevice": {
          "type": "number",
          "label": "hciDevice",
          "tooltip": "hciDeviceTooltip",
          "default": 0,
          "min": 0,
          "max": 9,
          "sm": 6,
          "newLine": true,
          "xs": 12,
          "md": 6,
          "lg": 6,
          "xl": 6
        },
        "transport": {
          "type": "select",
          "label": "transport",
          "tooltip": "transportTooltip",
          "default": "auto",
          "options": [
            {
              "label": "transportAuto",
              "value": "auto"
            },
            {
              "label": "transportLE",
              "value": "le"
            },
            {
              "label": "transportBREDR",
              "value": "bredr"
            }
          ],
          "sm": 6,
          "xs": 12,
          "md": 6,
          "lg": 6,
          "xl": 6
        },
        "autoConnect": {
          "type": "checkbox",
          "label": "autoConnect",
          "tooltip": "autoConnectTooltip",
          "default": true,
          "sm": 12,
          "newLine": true,
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        }
      }
    },
    "tabReconnect": {
      "type": "panel",
      "label": "tabReconnect",
      "items": {
        "reconnectEnabled": {
          "type": "checkbox",
          "label": "reconnectEnabled",
          "default": true,
          "sm": 12,
          "newLine": true,
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "reconnectBaseDelay": {
          "type": "number",
          "label": "reconnectBaseDelay",
          "tooltip": "reconnectBaseDelayTooltip",
          "default": 5,
          "min": 1,
          "max": 60,
          "sm": 6,
          "newLine": true,
          "hidden": "!data.reconnectEnabled",
          "xs": 12,
          "md": 6,
          "lg": 6,
          "xl": 6
        },
        "reconnectMaxDelay": {
          "type": "number",
          "label": "reconnectMaxDelay",
          "tooltip": "reconnectMaxDelayTooltip",
          "default": 300,
          "min": 10,
          "max": 3600,
          "sm": 6,
          "hidden": "!data.reconnectEnabled",
          "xs": 12,
          "md": 6,
          "lg": 6,
          "xl": 6
        }
      }
    },
    "tabSatellites": {
      "type": "panel",
      "label": "tabSatellites",
      "items": {
        "satelliteEnabled": {
          "type": "checkbox",
          "label": "satelliteEnabled",
          "tooltip": "satelliteEnabledTooltip",
          "default": false,
          "sm": 12,
          "newLine": true,
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "satellitePort": {
          "type": "number",
          "label": "satellitePort",
          "tooltip": "satellitePortTooltip",
          "default": 8734,
          "min": 1024,
          "max": 65535,
          "sm": 6,
          "newLine": true,
          "hidden": "!data.satelliteEnabled",
          "xs": 12,
          "md": 6,
          "lg": 6,
          "xl": 6
        },
        "_satelliteInfo": {
          "type": "staticText",
          "text": "satelliteInfo",
          "sm": 12,
          "style": {
            "marginTop": 16,
            "marginBottom": 8
          },
          "hidden": "!data.satelliteEnabled",
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        },
        "satelliteAllowFrom": {
          "type": "table",
          "label": "satelliteAllowFrom",
          "sm": 12,
          "hidden": "!data.satelliteEnabled",
          "items": [
            {
              "attr": "ip",
              "type": "text",
              "title": "satelliteIp",
              "width": "100%",
              "filter": false,
              "sort": false
            }
          ],
          "default": [],
          "xs": 12,
          "md": 12,
          "lg": 12,
          "xl": 12
        }
      }
    }
  }
}